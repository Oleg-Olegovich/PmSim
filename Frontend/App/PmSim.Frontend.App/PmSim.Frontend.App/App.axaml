<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:PmSim.Frontend.App"
             x:Class="PmSim.Frontend.App.App">
    
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Styles>
        <StyleInclude Source="avares://PmSim.Frontend.App/Styles/LightFluentTheme/ThemeStyle.axaml"/>
    </Application.Styles>
    
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/app-logo.ico" 
                      ToolTipText="PM Sim" />
        </TrayIcons>
    </TrayIcon.Icons>
</Application>
