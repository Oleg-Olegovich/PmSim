<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <StackPanel Spacing="20">
            <!-- Add Controls for Previewer Here -->
            <TextBlock Text="Text"
                       Classes="Title"/>
            <TextBlock Text="Text"
                       Classes="Text"/>
            <TextBlock Text="Text"
                       Classes="Label"/>
            <TextBlock Text="Text"
                       Classes="Error"/>
        </StackPanel>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <Style Selector="TextBlock.Text">
        <Setter Property="Foreground" Value="#e3dbd1"/>
    </Style>
    
    <Style Selector="TextBlock.Header">
        <Setter Property="Foreground" Value="#e3dbd1"/>
    </Style>
    
    <!-- Border label -->
    <Style Selector="TextBlock.Border">
        <Setter Property="Foreground" Value="#e3dbd1"/>
        <Setter Property="Background" Value="#454560"/>
    </Style>

    <!-- Error -->
    <Style Selector="TextBlock.Error">
        <Setter Property="Foreground" Value="#cc3333"/>
    </Style>
</Styles>