<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:localizations="clr-namespace:PmSim.Frontend.App.Properties.Localizations"
             mc:Ignorable="d"
             x:Class="PmSim.Frontend.App.Views.Frames.AuctionMenuView">

    <Grid RowDefinitions="*, Auto, 10*, *"
          ColumnDefinitions="*, 7*, 3*, *">

        <Border Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Classes="CommonBackdrop"
                Background="#cae7e3"
                />

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Classes="Header"
                   Text="{x:Static localizations:LocalizationGameScreen.Auctions}" />

        <TabControl Grid.Row="2"
                    Grid.Column="1">

            <TabItem Classes="Common"
                     Header="{x:Static localizations:LocalizationGameScreen.Employees}">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox Classes="Common"
                             SelectionMode="Single"
                             Items="{Binding EmployeeAuctions}"
                             SelectedItem="{Binding SelectedAuction}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="TextStroke"
                                        Padding="2">
                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                                          ColumnDefinitions="Auto, Auto">

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="2"
                                                   Classes="Header"
                                                   Text="{Binding Name}" />

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Programming}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Skills.Programming}" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Music}" />
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Skills.Music}" />

                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Design}" />
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Skills.Design}" />

                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Management}" />
                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Skills.Management}" />

                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Creativity}" />
                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Skills.Creativity}" />

                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Salary}" />
                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Salary}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </ScrollViewer>
            </TabItem>

            <TabItem Classes="Common"
                     Header="{x:Static localizations:LocalizationGameScreen.Projects}">

                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <ListBox Classes="Common"
                             SelectionMode="Single"
                             Items="{Binding ProjectAuctions}"
                             SelectedItem="{Binding SelectedAuction}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="TextStroke"
                                        Padding="2">
                                    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
                                          ColumnDefinitions="Auto, Auto">

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="2"
                                                   Classes="Header"
                                                   Text="{Binding Name}" />

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Programming}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Points.Programming}" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Music}" />
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Points.Music}" />

                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Design}" />
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Points.Design}" />

                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Management}" />
                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Points.Management}" />

                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Reward}" />
                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Reward}" />

                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{x:Static localizations:LocalizationGameScreen.Deadline}" />
                                        <TextBlock Grid.Row="6"
                                                   Grid.Column="1"
                                                   Classes="Text"
                                                   TextAlignment="Right"
                                                   Text="{Binding Deadline}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </ScrollViewer>
            </TabItem>

            <TabItem Classes="Common"
                     Header="{x:Static localizations:LocalizationGameScreen.Opportunities}">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox Classes="Common"
                             SelectionMode="Single"
                             Items="{Binding OpportunityAuctions}"
                             SelectedItem="{Binding SelectedAuction}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="TextStroke"
                                        Padding="2">
                                    <Grid RowDefinitions="Auto, Auto">
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Classes="Header"
                                                   Text="{Binding Name}" />

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Classes="Text"
                                                   Text="{Binding Description}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           ItemWidth="200" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <ScrollViewer Grid.Row="2"
                      Grid.Column="2"
                      VerticalScrollBarVisibility="Auto">
            
            <StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Classes="Border"
                               Background="#cae7e3"
                               Text="{x:Static localizations:LocalizationGameScreen.Bet}"/>
                    <Border Classes="TextStroke">
                        <NumericUpDown Classes="Bordered"
                                       Value="{Binding Bet}"
                                       Minimum="1"
                                       Maximum="100"/>
                    </Border>
                </StackPanel>
                
                <Button Classes="Stretch AttentionGrabbing"
                        IsEnabled="{Binding IsBetCorrect}"
                        Content="{x:Static localizations:LocalizationBasicScreen.ButtonConfirm}"
                        Command="{Binding ConfirmCommand}"/>
                
                <Button Classes="Stretch Menu"
                        Content="{x:Static localizations:LocalizationGameScreen.Create}"
                        Command="{Binding CreateCommand}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>